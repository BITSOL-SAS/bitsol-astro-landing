---
import Carousel from '../components/carrusel.astro';
import Nav from '../components/nav.astro';
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BITSOL - Tecnología que conecta, preserva e inspira</title>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background: #000;
      width: 100vw;
      min-height: 100vh;
    }
    body {
      width: 100vw;
      min-height: 100vh;
      /* overflow: hidden; */
    }
	p{
		color: #ffffff00;
	}
    .spotlight-demo-container {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 100vw;
      height: auto;
      min-height: 350px;
      align-items: center;
      justify-content: flex-start;
      background: rgba(0,0,0,0.96);
      -webkit-font-smoothing: antialiased;
      overflow: hidden;
      padding-top: 2rem; /* O 40px si lo quieres más pegado arriba */
      padding-bottom: 2rem;
    }
    .spotlight-bg {
      pointer-events: none;
      position: absolute;
      inset: 0;
      width: 100vw;
      height: 100%;
      background-size: 40px 40px;
      user-select: none;
      background-image:
        linear-gradient(to right, #171717 1px, transparent 1px),
        linear-gradient(to bottom, #171717 1px, transparent 1px);
      z-index: 1;
      /* Gradiente de opacidad para desaparecer los cuadros al final */
      -webkit-mask-image: linear-gradient(to bottom, #000 80%, transparent 100%);
      mask-image: linear-gradient(to bottom, #000 80%, transparent 100%);
    }
    .spotlight-svg {
      position: absolute;
      z-index: 2;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 900px;
      height: auto;
      pointer-events: none;
      opacity: 0.7;
      filter: blur(8px);
    }
    @media (min-width: 768px) {
      .spotlight-svg {
        top: -10%;
        left: 15vw;
        width: 90vw;
      }
    }
    .spotlight-content {
      position: relative;
      z-index: 10;
      margin: 0 auto;
      width: 100%;
      max-width: 900px;
      padding: 0 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
	  margin-top: 80px;
    }
    .spotlight-title {
      font-family: 'Chakra Petch', Arial, sans-serif;
      font-size: 4.2rem;
      font-weight: 800;
      line-height: 1.0;
      margin: 0 0 0.3em 0;
      letter-spacing: 0.01em;
      color: #fff;
      background: linear-gradient(90deg, #fafafa 60%, #a3a3a3 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;
      text-align: center;
      text-shadow: 0 2px 16px rgba(0,0,0,0.10);
    }
    @media (min-width: 768px) {
      .spotlight-title {
        font-size: 6rem;
      }
    }
    .spotlight-subtitle {
      font-family: 'Chakra Petch', Arial, sans-serif;
      font-size: 2.2rem;
      font-weight: 500;
      color: #fff;
      margin-bottom: 1rem;
      opacity: 0.92;
      text-align: center;
    }
    .spotlight-desc {
      font-family: 'Bitter', serif;
      margin: 0 0 2.2em 0;
      max-width: 700px;
      text-align: center;
      font-size: 1.2rem;
      font-weight: 400;
      color: #eaeaea;
      opacity: 0.92;
      letter-spacing: 0.01em;
      line-height: 1.5;
    }
    .spotlight-buttons {
      display: flex;
      gap: 1.2rem;
      justify-content: center;
      margin-top: 0.5em;
      flex-wrap: wrap;
	  margin-bottom: 60px;
    }
    .btn {
      font-family: 'Chakra Petch', Arial, sans-serif;
      font-size: 1rem;
      font-weight: 600;
      padding: 0.65em 1.7em;
      border-radius: 5px;
      border: none;
      outline: none;
      cursor: pointer;
      background: #fff;
      color: #171717;
      transition: background 0.2s, color 0.2s, border 0.2s;
      box-shadow: none;
    }
    .btn:hover, .btn:focus {
      background: #f3f3f3;
      color: #111;
    }
    .btn-secondary {
      background: transparent;
      color: #fff;
      border: 1.5px solid #fff;
      border-radius: 5px;
      font-weight: 600;
      transition: background 0.2s, color 0.2s, border 0.2s;
      font-size: 1rem;
      padding: 0.65em 1.7em;
    }
    .btn-secondary:hover, .btn-secondary:focus {
      background: #fff;
      color: #171717;
      border: 1.5px solid #fff;
    }
    .btn .arrow {
      display: inline-block;
      margin-left: 0.5em;
      transition: transform 0.2s;
    }
    .btn-secondary:hover .arrow {
      transform: translateX(4px);
    }
    .spotlight-version-badge {
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      font-family: 'Chakra Petch', Arial, sans-serif;
      font-size: 0.92rem;
      color: #fff;
      background: rgba(255,255,255,0.13);
      border-radius: 5px;
      padding: 0.18em 0.95em 0.18em 0.85em;
      margin: 0 auto 0.7rem auto;
      text-align: center;
      letter-spacing: 0.03em;
      box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
      backdrop-filter: blur(2px);
      border: none;
      width: fit-content;
    }
    .spotlight-version-badge .badge-dot {
      position: absolute;
      top: 4px;
      right: 4px;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 4px 1px #22c55e66;
      animation: blink-green-dot 1.2s infinite alternate;
      z-index: 2;
      border: none;
    }
    @keyframes blink-green-dot {
      0% { filter: brightness(1.1); box-shadow: 0 0 6px 1px #22c55e66; }
      100% { filter: brightness(1.7); box-shadow: 0 0 14px 3px #22c55e99; }
    }

  </style>
  <!-- Google Fonts: Chakra Petch y Bitter -->
  <link href="https://fonts.googleapis.com/css2?family=Bitter:wght@400;700&family=Chakra+Petch:wght@700&display=swap" rel="stylesheet">
</head>
